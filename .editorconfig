# .editorconfig : ktlint 설정

root = true

[*]
charset = utf-8
end_of_line = lf    # 파일 끝 개행문자 추가
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
tab_width = 4

[*.{kt,kts}]
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL
ij_kotlin_allow_trailing_comma = false          # 후행쉼표 제약 비활성화
ij_kotlin_allow_trailing_comma_on_call_site = false
max_line_length = 120
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.md]
max_line_length = 999999
trim_trailing_whitespace = false